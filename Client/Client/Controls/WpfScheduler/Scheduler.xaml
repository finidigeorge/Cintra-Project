<UserControl x:Class="Client.Controls.WpfScheduler.Scheduler" 
             xmlns:wpfScheduler="clr-namespace:Client.Controls.WpfScheduler"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"                 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <wpfScheduler:WeekScheduler
            x:Name="ucWeekScheduler"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <wpfScheduler:DayScheduler
            x:Name="ucDayScheduler"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

    </Grid>
</UserControl>
